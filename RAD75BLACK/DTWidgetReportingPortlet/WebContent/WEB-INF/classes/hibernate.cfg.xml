<?xml version="1.0" encoding="UTF-8"?>
   <!DOCTYPE hibernate-configuration
   PUBLIC "-//Hibernate/Hibernate Configuration DTD//EN"
  "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
    <hibernate-configuration>
      <session-factory>
     <property name="session_factory_name">java:hibernate/HibernateFactory</property>
      <!-- Data Source -->
      <!-- JBOSS JDBC CONNECTION -->
      <!-- property name="connection.datasource">java:jdbc/mpnetprd</property-->
	     
	  <!-- WEBSPHERE JDBC CONNECTION --> 
	  <!-- property name="connection.datasource">jdbc/mpnetds</property-->
	  <property name="connection.datasource">jdbc/mpnetprd</property>  
      <!-- Database Settings -->
     <!-- <property name="default_schema">MPNETADMINDV</property> -->
      <property name="dialect">org.hibernate.dialect.Oracle9Dialect</property>
      <property name="show_sql">true</property>
      <property name="format_sql">true</property>
      <property name="use_sql_comments">true</property>
      
      <!-- JDBC Settings -->
      <property name="jdbc.use_streams_for_binary">true</property>
      <property name="max_fetch_depth">1</property>
      <property name="jdbc.batch_size">0</property>
        
      <!-- Cache settings -->
      <property name="cache.provider_class">org.hibernate.cache.HashtableCacheProvider</property>
      <!-- Transaction API -->
      <!-- JBOSS Transaction API -->
      <!--property name="transaction.manager_lookup_class">org.hibernate.transaction.JBossTransactionManagerLookup</property-->
      <!-- Websphere Transaction API -->
      <property name="transaction.manager_lookup_class">org.hibernate.transaction.WebSphereTransactionManagerLookup</property>  
      <!-- Mapping files -->

        <!-- MPNet Mapping files -->

       <mapping resource="VAdvertisement.hbm.xml"/>
       <mapping resource="CandidateCount.hbm.xml"/>
       <mapping resource="AdvertisementCount.hbm.xml"/>
       <mapping resource="Sites.hbm.xml"/>
       <mapping resource="AdByBranch.hbm.xml"/>
       <mapping resource="RptResults.hbm.xml"/>
       <mapping resource="CandByRegLevel.xml"/>
       <mapping resource="Report.hbm.xml"/>
       <mapping resource="ReportContent.hbm.xml" />
       
          
      
    </session-factory>
   </hibernate-configuration>
